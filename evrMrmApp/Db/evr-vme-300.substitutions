file "evr-cml.template"
{pattern
{ SYS,      DEVICE,     ID, NBIT, MAX   }
{"$(SYS)", "$(DEVICE)", 0,  40,   81880 }
{"$(SYS)", "$(DEVICE)", 1,  40,   81880 }
{"$(SYS)", "$(DEVICE)", 2,  40,   81880 }
{"$(SYS)", "$(DEVICE)", 3,  40,   81880 }
}

