{"$(SYS)", "$(DEVICE)", 2}
{"$(SYS)", "$(DEVICE)", 3}
{"$(SYS)", "$(DEVICE)", 4}
{"$(SYS)", "$(DEVICE)", 5}
{"$(SYS)", "$(DEVICE)", 6}
{"$(SYS)", "$(DEVICE)", 7}
}
